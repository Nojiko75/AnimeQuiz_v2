<resources>
    <!-- Base application theme. -->
    <style name="Theme.AnimeQuiz_v2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_bar</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <!--<item name="android:windowTitleStyle">@style/MyCustomTitle</item>-->
    </style>

    <!--<style name="MyCustomTitle">
        <item name="android:textAlignment">center</item>
    </style>-->

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimaryVariant</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="leaf">
        <item name="cornerSize">10%</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerSize">20%</item>
    </style>

    <style name="EasyImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="strokeWidth">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="strokeColor">@color/border_image</item>
    </style>

    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/button_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="GameButtonRadius">
        <item name="cornerSize">35%</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/komtxtkb</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerSize">70%</item>
        <item name="iconPadding">-40dp</item>
    </style>
</resources>